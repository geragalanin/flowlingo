{
  "name": "langue",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev -w packages/frontend\" \"npm:dev -w packages/backend\"",
    "build": "npm run build -w packages/frontend && npm run build -w packages/backend",
    "start": "npm run start -w packages/backend",
    "lint": "echo 'No root lint configured'"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
